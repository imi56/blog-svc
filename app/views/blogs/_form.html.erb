<%= form_with(model: blog, class: "needs-validation", novalidate: true) do |form| %>
  <% if blog.errors.any? %>
    <div class="alert alert-danger">
      <h5>
        <i class="bi bi-exclamation-triangle-fill me-2"></i>
        <%= pluralize(blog.errors.count, "error") %> prohibited this blog from being saved:
      </h5>
      <ul class="list-group list-group-flush mt-2">
        <% blog.errors.each do |error| %>
          <li class="list-group-item list-group-item-danger"><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <!-- Other fields -->
  <div class="mb-3">
    <%= form.label :title, class: "form-label" %>
    <%= form.text_field :title, class: "form-control form-control-lg", placeholder: "Enter blog title" %>
  </div>

  <div class="mb-3">
    <%= form.label :content, class: "form-label" %>
    <%= form.text_area :content, class: "form-control", rows: 6, placeholder: "Write your blog content here..." %>
  </div>

  <div class="mb-3">
    <%= form.label :user_uuid, class: "form-label" %>
    <%= form.text_field :user_uuid, class: "form-control" %>
  </div>

  <!-- Tag selection area with Stimulus controller -->
  <div class="mb-3" data-controller="tags">
    <%= form.label :tags, "Tags" %>
    
    <!-- Selected tags appear as badges here -->
    <div data-tags-target="selectedContainer" class="mt-2 mb-2"></div>
    
    <!-- Dropdown toggle button -->
    <div class="dropdown">
      <button class="btn btn-secondary dropdown-toggle" type="button"
              data-action="click->tags#toggleDropdown" aria-expanded="false">
        Select Tags
      </button>
      <!-- Dropdown menu with search and tag list -->
      <div class="dropdown-menu p-2" data-tags-target="dropdownMenu">
        <!-- Search input to filter tags -->
        <input type="text" class="form-control mb-2" placeholder="Search tags..."
               data-tags-target="search" data-action="input->tags#filter">
        <!-- Container for tag options (populated by Stimulus) -->
        <div data-tags-target="options"></div>
      </div>
    </div>
    
    <!-- Hidden field to submit selected tags as a comma-separated string -->
    <%= form.hidden_field :tags, value: (blog.tags || ""), data: { tags_target: "hiddenField" } %>
  </div>

  <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
    <%= link_to "Cancel", blogs_path, class: "btn btn-outline-secondary me-md-2" %>
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>
